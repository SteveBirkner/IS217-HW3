extends layout
block content
	h1
		a(href='/') #{title}
	div
		form(id='calcForm', action='/calc', method='post')
			label(for='num1') First Number:
				br
				input(id='num1', type='number', value='', name='num1')
			br
			label(for='op') Operation:
				br
				input(type="radio", name="op", value="+", checked=op=="+")
				| + Add
				br
				input(type="radio", name="op", value="-", checked=op=="-")
				| - Subtract
				br
				input(type="radio", name="op", value="*", checked=op=="*")
				| * Multiply
				br
				input(type="radio", name="op", value="/", checked=op=="/")
				| / Divide
				br
			label(for='num2') Second Number
				br
				input(id='num2', type='number', value='', name='num2')
			br
			input(type='submit',value='Calculate!')
	#qunit-fixture
		p The answer is
		p#ans #{answer}

	p The answer is
	h3#ans #{answer}
	div#qunit
